<table class="admin-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Teaser</th>
      <th>Content</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for post in posts %}
    <tr>
      <td>{{ post.title }}</td>
      <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{ post.teaser }}</td>
      <td style="max-width: 400px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{ post.content | striptags }}</td>
      <td>
        {% if post.status == "published" %}
        <span class="badge badge-success">Published</span>
        {% elif post.status == "draft" %}
        <span class="badge badge-warning">Draft</span>
        {% elif post.status == "archived" %}
        <span class="badge badge-error">Archived</span>
        {% endif %}
      </td>
      <td>
        <div class="action-buttons">
          <button class="btn-edit"><i data-lucide="edit"></i></button>
          <button class="btn-delete"><i data-lucide="trash-2"></i></button>
        </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
