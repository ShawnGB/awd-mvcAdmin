{% from "admin/components/statusSelect.njk" import statusSelect %}

<table class="admin-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Teaser</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for post in posts %}
    <tr>
      <td>{{ post.title }}</td>
      <td
        style="
          max-width: 300px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        "
      >
        {{ post.teaser }}
      </td>
      <td>
        {{ statusSelect(post.id, post.status, "updatePostStatusFromTable") }}
      </td>
      <td>
        <div class="action-buttons">
          <button
            class="btn-edit"
            data-post="{{ post | dump | escape }}"
            onclick="showPostModalFromButton(this)"
            aria-label="Edit post"
          >
            <i data-lucide="edit"></i>
          </button>
          <button
            class="btn-delete"
            onclick="deletePostFromTable('{{ post.id }}', this)"
            aria-label="Delete post"
          >
            <i data-lucide="trash-2"></i>
          </button>
        </div>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<script>
  function showPostModalFromButton(btn) {
    try {
      const post = JSON.parse(btn.dataset.post);
      if (typeof showPostModal === "function") {
        showPostModal(post);
      } else {
        console.warn("showPostModal(post) is not defined.");
      }
    } catch (e) {
      console.error("Invalid post JSON in data-post:", e);
    }
  }
</script>
